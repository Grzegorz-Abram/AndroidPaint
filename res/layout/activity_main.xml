<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaintActivity" >

    <pl.android.androidpaint.PaintView
        android:id="@+id/PaintView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808080" >

        <Button
            android:id="@+id/button_pencil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/point"
            android:onClick="doPencil"
            android:text="@string/button_pencil"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/line"
            android:onClick="doLine"
            android:text="@string/button_line"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/circle"
            android:onClick="doCircle"
            android:text="@string/button_circle"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/rectangle"
            android:onClick="doRectangle"
            android:text="@string/button_rectangle"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_eraser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/eraser"
            android:onClick="doEraser"
            android:text="@string/button_eraser"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_fill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/fill"
            android:onClick="doFill"
            android:text="@string/button_fill"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808080" >

        <Button
            android:id="@+id/button_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/color"
            android:onClick="doColor"
            android:text="@string/button_color"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/brush"
            android:onClick="doSize"
            android:text="@string/button_size"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/open"
            android:onClick="doOpen"
            android:text="@string/button_open"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/save"
            android:onClick="doSave"
            android:text="@string/button_save"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_undo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/undo"
            android:onClick="doUndo"
            android:text="@string/button_undo"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/newfile"
            android:onClick="doClear"
            android:text="@string/button_clear"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>